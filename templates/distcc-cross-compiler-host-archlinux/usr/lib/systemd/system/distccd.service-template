[Unit]
Description=Distributed compilation server for C, C++ and Objective-C ({toolchain})
Documentation=man:distccd(1)
After=network.target

[Service]
EnvironmentFile=/etc/conf.d/distccd-{client_arch}
ExecStart=/usr/bin/distccd --no-detach --daemon $DISTCCD_ARGS

[Install]
WantedBy=multi-user.target
